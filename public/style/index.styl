/*
 * 段落样式
 */
body
  background-color #f2f7fa
  background-image url(../image/background.png)
  background-repeat no-repeat
  background-size 100% 100%

.content
  background-color #ffffff

.info
  width 100%
  height 100%
  overflow auto

.title
  width 100%
  height 72px
  line-height 72px
  font-size 26px
  text-align center

.form
  margin 0 auto 20px
  box-sizing border-box
  padding 10px 6% 20px
  width 0%
  min-width 800px
  overflow auto
  background-color #fff
  &__fieldset
    margin-top 10px
    box-sizing border-box
    padding-top 20px
    width 100%
    line-height 72px
    font-size 18px
    color #333333
  &__field
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content flex-start
    width 100%
    min-height 40px
    line-height 40px
    font-size 14px
    color #333333
    overflow hidden
    align-items center
    margin-top 24px
    &__name
      text-align left
      width 90px
      flex-shrink 0
      &--required:after
        content '*'
        color #CC6561
        padding-left 6px
    &__text
      flex 1
    &__tip
      margin-top 2px
      box-sizing border-box
      padding-left 90px
      width 100%
      font-size 14px
      line-height 20px
      color #CC6561
  &__btn-group
    width 100%
    height 72px
    line-height 72px
    text-align center
  .error-log
    color tomato
    font-size 14px

.message
  width 50%
  height 36px
  min-width 800px
  line-height 36px
  font-size 14px
  color #CC6561
  background #FFF6DB
  border-radius 3px
  text-align center
  margin 0 auto
  overflow hidden
.submit
  margin 0 auto


.el-input, .el-select
  width 100%
.el-radio
  font-weight normal
  font-size 12px
.el-cascader
  width 100%
.el-date-editor
  .el-input__prefix
    padding-left 4px
    line-height 40px